<% content_for :page_title, "Index" %>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>

    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to post.title, post %>
            
        </h5>
        <p class="card-text">
          <%= post.content %>
            
        </p>
      </div>
    </div>

    <% end %>
    
  </div>
  
</div>