<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.input :name , input_html: {class: 'form-control col-lg-6'}, wrapper: false, label_html: {class: 'label'} %>
  </div>



  <div class="form-group">
    <%= f.input :comment, input_html: {class: 'form-control col-lg-6'}, wrapper: false, label_html: {class: 'label'} %>
  </div>


  <%= f.button :submit, 'Update post', class: "btn btn-primary" %>
<% end %>
